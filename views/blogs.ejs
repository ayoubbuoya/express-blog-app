<!-- views/posts.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Blog Posts</title>
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl text-center font-bold my-8">My Blogs</h1>
      <% if (success) { %>
      <script>
        alert("Blog post created successfully!");
        console.log("success");
      </script>
      <% } %>
      <div class="grid grid-cols-1 md:grid-cols-3 grid-rows-auto gap-4">
        <% posts.forEach((post) => { %>
        <div class="bg-white rounded shadow-md h-full" style="height: 10rem">
          <div class="p-4" style="height: 100%">
            <h2
              class="text-xl font-bold mb-2 text-center text-gray-800 hover:text-blue-500"
            >
              <%= post.title %>
            </h2>
            <p
              class="text-gray-600"
              style="
                overflow-wrap: break-word;
                word-wrap: break-word;
                hyphens: auto;
              "
            >
              <%= post.description %>
            </p>
          </div>
        </div>
        <% }); %>
      </div>
      <a
        href="/posts/create"
        class="mt-8 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >Add Post</a
      >
    </div>
  </body>
</html>
